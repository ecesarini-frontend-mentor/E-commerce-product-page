/*challenge*/
footer.attribution { font-size: 11px; text-align: center; }
footer.attribution a { color: hsl(228, 45%, 44%); }

/*work*/
:root {
    --orange: hsl(26, 100%, 55%);
    --pale-orange: hsl(25, 100%, 94%);
    --very-dark-blue: hsl(220, 13%, 13%);
    --dark-grayish-blue: hsl(219, 9%, 45%);
    --grayish-blue: hsl(220, 14%, 75%);
    --light-grayish-blue: hsl(223, 64%, 98%);
    --white: hsl(0, 0%, 100%);
    --black: hsl(0, 0%, 0%);

    --mobile-width: 375px;
    --desktop-width: 1440px;

    --img-width: 80%;
}

ul {
    list-style: none;
    padding: 0;
}
button {
    box-sizing: content-box;
	background: none;
	color: inherit;
	border: none;
	padding: 0;
	font: inherit;
	cursor: pointer;
	outline: inherit;
}


html { 
    height: 100%;
    background-color: var(--white); 
} 
body {
    box-sizing: content-box;
    min-height: 100vh;
    max-width: var(--desktop-width);
    margin: 4vh 12vw 0 12vw;
    font-family: 'Kumbh Sans', sans-serif;
    font-size: 16px;
    background-color: var(--white); 
}


main {
    display: flex;
    flex-direction: column;
}


/* NAVBAR */
#navbar-container {
    width: 100%;
    position: relative;
}
#navbar {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.nav-menu {
    display: none;
}
.nav-sitelogo img {
    max-width: 100%;
    margin-right: 30px;
}
.nav-cat {
    margin-right: auto;
    display: inline-flex;
    justify-content: space-evenly;
}
.nav-cat button:hover span {
    color: var(--dark-grayish-blue);
}
.nav-cat span {
    margin: 0 10px;
    color: var(--grayish-blue);
    font-weight: 700;

}

.nav-tail {
    display: inline-flex;
    justify-content: space-around;
    align-items: center;
}
.nav-tail-btn-cart {
    position: relative;
    width: 2.7rem;
}
.nav-tail-btn-cart i {
    display: none;
    position: absolute;
    right: 0%;
    bottom: 70%; 
    width: 45%;
    font-family: monospace;
    font-weight: 500;
    font-size: 0.7em;
    color: var(--white);
    background-color: var(--orange);
    border-radius: 40%;
}
.nav-tail-btn-cart-img {
    width: 70%;
}
.nav-tail-btn-avatar {
    width: 40%;
}
.nav-tail-btn-avatar-img {
    width: 85%;
}


.navbar-hr {
    border: 1px solid var(--grayish-blue);
}

/* CONTENT */

#content {
    width: 100%;
    margin: 5% 0;
    display: flex;
}

#image-side {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.product-sel {
    text-align: center;
}
.product-sel img{
    width: var(--img-width);
    border-radius: 10px;
}
.product-thumb {
    width: var(--img-width);
    display: flex;
    justify-content: space-between;
}
.product-thumb .tmb-btn {
    margin: 20px 7px;
    border-radius: 5px;
}
.product-thumb .tmb-btn:focus {
    opacity: 0.7;
    border: 5px solid var(--orange);
    border-radius: 5px;
    background-color: var(--orange);
}
.product-thumb .tmb-btn img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

#desc-side {
    width: 50%;
    margin: 7% 0;
    display: flex;
    flex-direction: column;
}
.desc-top {
    color: var(--orange);
    font-weight: 600;
    font-size: 0.9em;
    margin: 0;
    text-transform: uppercase;
}
.desc-h {
    color: var(--black);
    font-weight: 700;
    font-size: 3em;
    margin: 3% 0 5% 0;
}
.desc-par {
    margin-bottom: 7%;
    color: var(--dark-grayish-blue);
    font-size: 1.2em;
    font-weight: 500;
}
.desc-price {
    display: inline-flex;
    margin-bottom: 3%;
}
.desc-price .desc-price-current {
    color: var(--black);
    font-size: 2.3em;
    font-weight: 600;
    margin-right: 25px;
}
.desc-price .desc-price-discount {
    margin: auto 0;
    padding: 5px 7px;
    color: var(--orange);
    background-color: var(--pale-orange);
    font-size: 1em;
    font-weight: 700;
    border-radius: 5px;
}
.desc-price-old {
    margin-bottom: 7%;
    color: var(--grayish-blue);
    font-size: 1.2em;
    font-weight: 600;
    text-decoration: line-through;
}
.desc-purchase-container {
    width: 100%;
    display: flex;
}
.desc-purchase-container > div {
    height: 3em;
}
.desc-purchase-selection {
    margin-right: 30px;
    display: flex;
    flex-basis: 30%;
    background-color: var(--light-grayish-blue);
    justify-content: space-around;
    border-radius: 7px;
}
.desc-purchase-selection button img {
    display: block;
    margin: auto;
}
.desc-purchase-selection span{
    color: var(--black);
    font-size: 1.2em;
    font-weight: 600;
}
.desc-purchase-add-cart {
    width: 30%;
    display: inline-flex;
    flex-basis: 50%;
    justify-content: center;
    color: var(--white);
    background-color: var(--orange);
    font-weight: 600;
    border-radius: 7px;
    box-shadow: 0px 10px 27px -5px var(--orange);
}
.desc-purchase-add-cart img {
    color: var(--white);
    width: 8%;
    height: 43%;
    margin: auto 0;
}

.desc-purchase-count {
    margin: auto 0;
}
.desc-purchase-add-cart span {
    margin: auto 0 auto 10px;
}
.product-sel-mq {
    position: relative;
    display: none;
}

/*MODAL*/
.modal {
    display: none;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.7);
}
.modal-container {
    position: relative;
    max-width: 40rem;
    width: 40rem;
    z-index: 1;
    margin: 20px auto 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.modal-close-button {
    align-self: flex-end;
    margin: 0 3px 3px 0;
}
.modal-close-button img {
    width: 25px;
}
.modal-top-container {
    position: relative;
}
.modal-top-main-img {
    width: 40rem;
    border-radius: 20px;
}
.modal-top-btn {
    position: absolute;
    bottom: 50%;
    width: 70px;
    height: 70px;
    background-color: var(--white);
    border-radius: 50%;
}
.modal-top-btn-previous {
    left: -5%;
}
.modal-top-btn-next {
    right: -5%;
}
.modal-bottom-container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 15px;
}
.modal-bottom-thumb-button {
    margin: 0 7px;
}
.modal-bottom-thumb-button img {
    width: 100%;
    height: 100%;
    border-radius: 10px;
}
.modal-bottom-thumb-button:focus img {
    background-color: var(--orange);
    border: 3px solid var(--orange);
    border-radius: 10px;
    filter: brightness(1.5) contrast(0.8);
}
.modal-bottom-thumb-button:hover img{
    filter: brightness(1.2) contrast(0.5);
}

/* Cart popup on click */
.pop-cart-created {
    display: none;
    position: absolute;
    z-index: 1;
    top: 120%;
    right: 0%;
    width: 25%;
}
.pop-cart-container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-content: center;
    background-color: var(--white);
    border-radius: 7px;
    box-shadow: 2px 5px 9px -2px var(--dark-grayish-blue);
}
.pop-cart-head {
    margin: 10px 0 30px 30px;
    font-size: 1.2rem;
    font-weight: 800;
}
.pop-cart-hr {
    width: 98%;
    border: 1px solid var(--grayish-blue);
}
.pop-cart-is-empty {
    font-size: 1.1rem;
    font-weight: 800;
    color: var(--dark-grayish-blue);
    text-align: center;
}
.pop-cart-items-container {
    display: flex;
}
.pop-cart-items {
    display: grid;
    width: 100%;
    grid-template-rows: 1fr;
    grid-template-columns: 20% 1fr 20%;
    justify-items: center;
}
.pop-cart-items > img {
    margin: 0 auto;
    max-width: 80%;
    max-height: 80%;
    border-radius: 3px;
}

.pop-cart-items-details {
    margin: auto 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    
}
.pop-cart-items-details-prod-1row {
    margin-bottom: 3px;
}
.pop-cart-items-details-prod-1row,
.pop-cart-items-details-prod-2row :nth-child(1) {
    color: var(--dark-grayish-blue);
    font-weight: 500;
}
.pop-cart-items-details-prod-2row :nth-child(2) {
    color: var(--black);
    font-weight: 700;
}
.pop-cart-tail {
    display: none;
    width: 90%;
    height: 2.7rem;
    margin: 5px auto 25px auto;
    font-weight: 700;
    color: var(--white);
    background-color: var(--orange);
    border-radius: 7px;
}


/* MEDIA QUERY */
@media screen and (max-width: 700px) {
    footer.attribution {
        margin-top: 30px;
    }
    body {
        width: 100%;
        margin: 0;
    }
    main {
        position: relative;
        width: 100%;
        margin: 0 auto;
    }
    .leftbar-close-btn {
        display: block;
        margin: 0 7% 0 5%;
    }
    #navbar {
        width: 100%;
        justify-content: flex-start;
    }
    .nav-menu {
        display: block;
        margin: 0 7% 0 3%;
    }
    .nav-menu-btn {
        width: 10%;
    }
    .nav-tail {
        margin-left: auto;
        justify-content: flex-end;
    }
    .nav-tail-btn-cart {
        margin-right: 10px;
        max-width: 2.2rem;
    }
    .nav-tail-btn-avatar-img {
        max-width: 60%;
    }
    .navbar-hr {
        display: none;
    }
    
    #image-side {
        position: relative;
        display: block;
    }
    #image-side .product-sel-mq-btn {
        position: absolute;
    }
    
    #leftbar {
        /*display: none;*/
        visibility: hidden;
        opacity: 0;
        position: fixed;
        display: flex;
        width: 100%;
        height: 0;
        z-index: 1;
    }
    .leftbar-overlay {
        width: 35%;
        background-color: rgba(0, 0, 0, 0.7);
    }
    .leftbar-content {
        width: 0%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-content: flex-start;
        background-color: var(--white);
        /*transition: width 0.2s ease-in;*/
        /*transition: width 2s ease-in;*/
    }

    .leftbar-content .leftbar-close-btn {
        align-self: flex-start;
        margin: 7% 0 3% 5%;
    }
    .leftbar-content .nav-cat {
        margin-left: 5%;
        width: 100%;
        height: 30vh;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: flex-start;
    }

    .nav-cat span {
        margin-left: 0;
        color: var(--black);
        font-size: 1.3em;
        font-weight: 700;
    }

    .product-sel-mq > img {
        width: 100%;
    }
    .product-sel-mq-btn {
        position: absolute;
        top: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 3em;
        height: 3em;
        background-color: var(--white);
        border-radius: 50%;
    }
    .product-sel-mq-btn img {
        width: 30%;
    }
    .product-sel-mq-btn-previous {
        margin-left: 3%;
    }
    .product-sel-mq-btn-next {
        right: 0;
        margin-right: 3%;
    }
    #desc-side {
        width: 100%;
        margin: 3%;
    }
    #content {
        flex-direction: column;
        margin: 0;
    }
    .desc-h {
        font-size: 2.3em;
    }

    .product-sel-mq {
        display: block;
    }
    .product-sel img {
        border-radius: 0;
    }
    .product-thumb {
        display: none;
    }
    
    .pop-cart-created {
        top: 0%;
        right: 0%;
        width: 100%;
        height: 100%;
    }
    .pop-cart-container {
        width: 95%;
        height: 80%;
        margin: 3% auto 2% auto;
        justify-content: flex-start;
        box-shadow: unset;
    }
    .pop-cart-head {
        margin: 5% 0 5% 5%;
    }
    .pop-cart-content {
        margin: auto 0;
        overflow-y: auto;
    }

    

    
}